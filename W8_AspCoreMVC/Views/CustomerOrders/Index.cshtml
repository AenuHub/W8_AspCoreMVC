@model W8_AspCoreMVC.Models.CustomerOrderViewModel

<!DOCTYPE html>

<html>
<head>
    <title>Customer Orders</title>
</head>
<body>
<h1>Customer Orders</h1>
<p><strong>Customer First Name:</strong> @Model.Customer.FirstName</p>
<p><strong>Customer Last Name:</strong> @Model.Customer.LastName</p>
<p><strong>Customer Email:</strong> @Model.Customer.Email</p>

<p><strong>Orders:</strong></p>
<table>
    <tr>
        <th>Order Number</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td style="text-align: center">@order.Id</td>
            <td>@order.ProductName</td>
            <td>@order.Price</td>
            <td style="text-align: center">@order.Quantity</td>
        </tr>
    }
</table>
</body>
</html>